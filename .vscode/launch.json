{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Next.js App",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--inspect",
        "./node_modules/next/dist/bin/next",
        "dev"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Frontend (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
    }
  ]
}
